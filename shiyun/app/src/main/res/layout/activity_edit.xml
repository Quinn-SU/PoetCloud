
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_container"
                android:background="@drawable/mapback2"
                style="@style/NormalBgLeftRightPadding"
                tools:context="com.example.shiyun.activity.EditActivity">

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18"
        android:maxLines="1"
        android:background="@color/transparent"
        android:hint="标题"
        android:fontFamily="@font/jianshi_default"
        style="@style/EditTextTitleStyle" />

    <ScrollView
        android:id="@+id/edit_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_title"
        android:layout_marginTop="@dimen/margin_18"
        android:background="@drawable/mapback2"
        android:scrollbars="none"
        >

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="top"
            style="@style/EditTextContentStyle"
            android:hint="内容"
            android:fontFamily="@font/jianshi_default"
            android:paddingBottom="@dimen/margin_40"
            />

    </ScrollView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_18"
        >

        <Button
            android:id="@+id/edit_save"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@xml/but_red"
            android:fontFamily="@font/jianshi_default"
            android:text="@string/edit_save" />

    </FrameLayout>

</RelativeLayout>
